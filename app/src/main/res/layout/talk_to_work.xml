<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp"> <!-- Ensure buttons are centered -->

    <ImageButton
        android:id="@+id/btn_call"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/phone_call_icon" /> <!-- Added contentDescription for accessibility -->

    <ImageButton
        android:id="@+id/btn_whatsapp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/whatapp" /> <!-- Added contentDescription for accessibility -->

    <ImageButton
        android:id="@+id/btn_skillLinkChat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/chat" /> <!-- Added contentDescription for accessibility -->

</LinearLayout>
